{% extends "layout_member.html.twig" %}

{% block title %}Activities | {{ parent() }}{% endblock %}

{% block pageheader %}
Activity list
{% endblock %}

{% block content %}
<div class="container">
    <div class="row">
        <div class="col-sm-offset-11 col-sm-1">
            <a type="button" class="btn btn-default" href="{{ path("member_activity_new") }}">New</a>
        </div>
    </div><!-- /.row -->
    {% if is_granted('ROLE_ADMIN') %}
    {% endif %}
    
    <div class="row">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Start</th>
                        <th>End</th>
                        <th>Name</th>
                        <th>Venue</th>
                        <th>Target</th>
                        <th>Official</th>
                        <th>Active</th>
                        <th>Updated at</th>
                    </tr>
                </thead>
                <tbody>
                    {% for activity in activities %}
                    <tr>
                        <td>{{ activity.starttime|date("m-d")}}</td>
                        <td>{{ activity.starttime|date("H:i")}}</td>
                        <td>{{ activity.endtime|date("H:i")}}</td>
                        <td><a href="{{ path("member_activity_show", {"id": activity.id}) }}">{{ activity.name }}</a></td>
                        <td>{{ activity.venue }}</td>
                        <td>{{ activity.target }}</td>
                        <td>{{ activity.isOfficial }}</td>
                        <td>{{ activity.isActive }}</td>    
                        <td>{{ activity.updatedAt|date("Y-m-d H:i")}}</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div><!-- /.table -->
    </div><!-- /.row -->
</div><!-- /.container -->
{% endblock %}