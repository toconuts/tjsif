{% extends "layout_member.html.twig" %}

{% block title %}Edit activity | {{ parent() }}{% endblock %}

{% block pageheader %}
Edit Activity <small>- {{ activity.name }}</small>
{% endblock %}

{% block content %}
<div class="container-fluid">
    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
    <div class="row sub-header">
        <div class="col-sm-offset-1">
            <h2 class="">Activity information</h2>
        </div>
    </div><!-- /.row -->

    <div class="row">
        <div class="col-sm-11">
        {{ form_widget(form) }}
        </div>
    </div><!-- /.row -->
    
    <div class="row">
        <div class="col-sm-offset-1 col-sm-10">
            <div class="btn-group btn-group-justified" role="group" aria-label="...">
                <div class="btn-group" role="group">
                    <a class="btn btn-lg btn-default" href="{{ path("member_activity_show", {"id": activity.id}) }}">Cancel</a>
                </div>
                <div class="btn-group" role="group">
                    <input type="submit" value="Update" class="btn btn-lg btn-primary" />
                </div>
            </div>
        </div>
    </div><!-- /.row -->
    {{ form_end(form) }}
</div><!-- /.container -->
{% endblock %}