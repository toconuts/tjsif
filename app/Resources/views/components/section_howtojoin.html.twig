                                        <tr class="info">
                                            <td class="text-center"><i class="fa fa-check-square-o fa-fw" aria-hidden="true"></i></td>
                                            <td class="text-center"><i class="fa fa-square-o fa-fw" aria-hidden="true"></i></td>
                                        </tr>
