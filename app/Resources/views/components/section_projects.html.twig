<section id="projects" class="projects">
    <div class="container">
        <h1>Student projects</h1>
            <p>Among Grade 11 Students of Princess Chulabhorn Science High Schools (PCSH Schools), the sister school in Thai and Super Science High Schools (SSH Schools) in Japan</p>
            <p>All presentations should be in <code>English</code></p>
            <div class="table-responsive">
                <table class="table table-striped table-hover table-bordered">
                    <thead>
                        <tr>
                            <th class="text-center">School type</th>
                            <th class="text-center">The number of schools</th>
                            <th class="text-center">The number of oral presentation</th>
                            <th class="text-center">The number of poster presentation</th>
                            <th class="text-center">Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% set school = 0 %}
                        {% set oral = 0 %}
                        {% set poster = 0 %}
                        {% set total = 0 %}
                        {% for organizationType in projectStatics %}
                        <tr>
                            <td>{{ organizationChoices[organizationType.type] }}</td>
                            <td class="text-center">{{ organizationType[1] }}</td> {% set school = school + organizationType[1] %}
                            <td class="text-center">{{ organizationType[2] }}</td> {% set oral = oral + organizationType[2] %}
                            <td class="text-center">{{ organizationType[3] }}</td> {% set poster = poster + organizationType[3] %}
                            <td class="text-center">{{ organizationType[2] + organizationType[3] }}</td> {% set total = total + organizationType[2] + organizationType[3] %}
                        </tr>
                        {% endfor %}
                    </tbody>
                    <thead>
                        <tr>
                            <th class="text-center">Total</th>
                            <th class="text-center">{{ school }}</th>
                            <th class="text-center">{{ oral }}</th>
                            <th class="text-center">{{ poster }}</th>
                            <th class="text-center">{{ total }}</th>
                        </tr>
                    </thead>
                </table>
            </div>
        {% include "components/section_project_categories.html.twig" %}
        <hr class="featurette-divider">
    </div><!-- /.container-->
</section><!-- /projects-->
