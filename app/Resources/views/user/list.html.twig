{% extends "base.html.twig" %}

{% block title %}Login{% endblock %}
{% block body %}

<table class="table table-striped">
    <thead>
        <tr>
            <th></th>
            <th>#</th>
            <th>Title</th>
            <th>First Name</th>
            <th>Middle Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Gender</th>
            <th>tel</th>
            <th>Job</th>
            <th>Organization</th>
            <th>Type</th>
            <th>Position</th>
            <th>City</th>
            <th>Province</th>
            <th>Country</th>
            <th>Zip Code</th>
            <th>About me</th>
            <th>Homepage</th>
            <th>Blog</th>
            <th>Allergies</th>
            <th>Created at</th>
            <th>Updated at</th>
        </tr>
    </thead>
    <tbody>
        {% for user in users %}
        <tr>
            <td><img src="{{ vich_uploader_asset(user.picture, 'imageFile') }}" alt="{{ user.picture.imageName }}" /></td>
            <td>{{ user.id }}</td>
            <td>{{ user.title }}</td>
            <td>{{ user.firstname }}</td>
            <td>{{ user.middlename }}</td>
            <td>{{ user.lastname }} </td>
            <td>{{ user.email }}</td>
            <td>{% if user.gender == 0 %}Male{% else %}Female{% endif %}</td>
            <td>{{ user.tel }}</td>
            <td>{{ user.job.name }}</td>
            <td>{{ user.organization.name }}</td>
            <td>{{ user.type }}</td>
            <td>{{ user.position }}</td>
            <td>{{ user.city }}</td>
            <td>{{ user.province }}</td>
            <td>{{ user.country }}</td>
            <td>{{ user.zip }}</td>
            <td>{{ user.aboutMe }}</td>
            <td>{{ user.homepage }}</td>
            <td>{{ user.blog }}</td>
            <td>{{ user.allergies }}</td>
            <td>{{ user.createdAt|date('Y-m-d') }}</td>
            <td>{{ user.updatedAt|date('Y-m-d') }}</td>
            
            <td><a class="btn btn-primary" href="{{ path("user_show", {"id": user.id}) }}">Detail</a></td>
        </tr>
        {% endfor %}
    </tbody>
</table>

{% endblock %}