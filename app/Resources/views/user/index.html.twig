{% extends "layout_member.html.twig" %}

{% block title %}User | {{ parent() }}{% endblock %}

{% block pageheader %}
Search members
{% endblock %}

{% block content %}
<div class="container">
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th></th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Job</th>
                    <th>Organization</th>
                    <th>Type</th>
                    <th>Active</th>
                </tr>
            </thead>
            <tbody>
                {% for user in users %}
                <tr>
                    <td>
                        {% if user.picture != null %}
                        <img class="profile-picture-xs img-circle" src="{{ vich_uploader_asset(user.picture, 'imageFile') }}" alt="{{ user.picture.imageName }}" />
                        {% else %}
                        <img class="profile-picture-xs img-circle" src="{{ asset('template/user/initial_user.png') }}">
                        {% endif %}
                    </td>
                    <td><a href="{{ path("member_user_show", {"id": user.id}) }}">{{ user.fullName }}</a></td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.job.name }}</td>
                    <td>{{ user.organization.name }}</td>
                    <td>{{ user.type }}</td>
                    <td>{{ user.isActive }}</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div><!-- /.table-responsive -->
</div><!-- /.container -->
{% endblock %}