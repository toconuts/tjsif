{% extends "layout_member.html.twig" %}

{% block title %}Organization | {{ parent() }}{% endblock %}

{% block pageheader %}
Organization list
{% endblock %}

{% block content %}
<div class="container">
    {% if is_granted('ROLE_SUPER_ADMIN') %}
    <div class="row">
        <div class="col-sm-offset-11 col-sm-1">
            <a type="button" class="btn btn-default" href="{{ path("member_organization_new") }}">New</a>
        </div>
    </div><!-- /.row -->
    {% endif %}
    
    <div class="row">
        <div class="table">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Students</th>
                        <th>Teachers</th>
                        <th>Deputies</th>
                        <th>Director</th>
                        <th>JOCV</th>
                        <th>The others</th>
                        <th>Active</th>
                        <th>Updated at</th>
                    </tr>
                </thead>
                <tbody>
                    {% for organization in organizations %}
                    <tr>
                        <td><a href="{{ path("member_organization_show", {"id": organization.id}) }}">{{ organization.name }}</a></td>
                        <td>{{ organization.students.count() }}</td>
                        <td>{{ organization.teachers.count() }}</td>
                        <td>{{ organization.deputies.count() }}</td>
                        <td>{{ organization.directors.count() }}</td>
                        <td>{{ organization.JOCVs.count() }}</td>
                        <td>{{ organization.theOthers.count() }}</td>
                        <td>{{ organization.isActive }}</td>    
                        <td>{{ organization.updatedAt|date("Y-m-d H:i")}}</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div><!-- /.table -->
    </div><!-- /.row -->
</div><!-- /.container -->
{% endblock %}