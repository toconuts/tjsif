{% extends "layout_member.html.twig" %}

{% block title %}Project | {{ parent() }}{% endblock %}

{% block pageheader %}
Project <small>- {{ project.name }}</small>
{% endblock %}

{% block content %}
<div class="container">
    <div class="row sub-header">
        <div class="col-sm-offset-1 col-sm-5">
            <h2 class="">Project information</h2>
        </div>
        {% if is_granted('ROLE_SUPER_ADMIN') or 
             (is_granted('ROLE_ADMIN') and app.user.id == project.organization.id) %}
        <div class="col-sm-offset-2 col-sm-2">
            <div class="btn-group" role="group" aria-label="...">
                <a class="btn btn-default" href="{{ path("member_project_index") }}">Back</a>
                <a type="button" class="btn btn-primary" href="{{ path("member_project_edit", {"id": project.id}) }}">Edit</a>
            </div>
        </div>
        {% endif %}
    </div><!-- /.row -->
    
    <div class="row">
        <div class="col-sm-10">
            {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
            {{ form_widget(form) }}
            {{ form_end(form) }}
        </div>
    </div><!-- /.row -->
   
    <div class="row">
        {% if is_granted('ROLE_SUPER_ADMIN') or 
             (is_granted('ROLE_ADMIN') and user.id == project.organization.id) %}
        {% if project.isActive %}
        <div class="col-sm-offset-7 col-sm-3">
            <form action="{{ path('member_project_inactivate', {id: project.id}) }}" method="POST">
                <input type="hidden" name="_method" value="INACTIVATE"/>
                <div class="btn-group" role="group" aria-label="...">
                    <button type="submit" value="Inactivate" class="btn btn-warning"/>Inactivate</button>
                    <button class="btn btn-warning" disabled>Activate</button>
                </div>
            </form>
        </div>
        {% else %}
        <div class="col-sm-offset-7 col-sm-3">
            <form action="{{ path('member_project_activate', {id: project.id}) }}" method="POST">
                <input type="hidden" name="_method" value="ACTIVATE"/>
                <div class="btn-group" role="group" aria-label="...">
                    <button class="btn btn-warning" disabled>Inactibate</button>
                    <button type="submit" value="Activate" class="btn btn-warning"/>Activate</button>
                </div>
            </form>
        </div>
        {% endif %}
        {% endif %}
    </div><!-- /.row -->

</div><!-- /.container -->
{% endblock %}
