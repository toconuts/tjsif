{% extends "layout_member.html.twig" %}

{% block title %}Project | {{ parent() }}{% endblock %}

{% block pageheader %}
Create Project
{% endblock %}

{% block content %}
<div class="container">
    <div class="row sub-header">
        <div class="col-sm-offset-1 col-sm-5">
            <h2 class="">Project information</h2>
        </div>
        <div class="col-sm-offset-2 col-sm-2">
            <div class="btn-group" role="group" aria-label="...">
                <a class="btn btn-default" href="{{ app.request.headers.get('referer') }}">Cancel</a>
                <a type="button" class="btn btn-primary" href="{{ path("member_project_new") }}">Create</a>
            </div>
        </div>
    </div><!-- /.row -->

    <div class="row">
        <div class="col-sm-10">
            {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
            {{ form_widget(form) }}
            {{ form_end(form) }}
        </div>
    </div><!-- /.row -->
</div><!-- /.container -->
{% endblock %}