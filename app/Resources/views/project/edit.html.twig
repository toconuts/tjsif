{% extends "layout_member.html.twig" %}

{% block title %}Project | {{ parent() }}{% endblock %}

{% block pageheader %}
Project <small>- {{ project.name }}</small>
{% endblock %}

{% block content %}
<div class="container-fluid">
    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
    <div class="row sub-header">
        <div class="col-sm-offset-1">
            <h2 class="">Project information</h2>
        </div>
    </div><!-- /.row -->
    
    <div class="row">
        <div class="col-sm-11">
            <div id="project information">
                {{ form_errors(form) }}
                
                {{ form_row(form.name) }}
                {{ form_row(form.concept) }}
                {{ form_row(form.objective) }}
                {{ form_row(form.topic) }}
                {{ form_row(form.style) }}
                {{ form_row(form.organization) }}
            </div>
        </div>
    </div><!-- /.row -->
    
    {% include "components/member/project_members_edit.html.twig" %}
    
    <div class="row">
        <div class="col-sm-offset-1 col-sm-10">
            <div class="btn-group btn-group-justified" role="group" aria-label="...">
                <div class="btn-group" role="group">
                    <a class="btn btn-lg btn-default" href="{{ path("member_project_show", {"id": project.id}) }}">Cancel</a>
                </div>
                <div class="btn-group" role="group">
                    <input type="submit" value="Update" class="btn btn-lg btn-primary" />
                </div>
            </div>
        </div>
    </div><!-- /.row -->
    
    {{ form_end(form) }}
</div><!-- /.container -->
{% endblock %}
